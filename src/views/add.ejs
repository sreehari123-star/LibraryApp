  <script>
    let booktitle = document.getElementById("booktitle");
    let book = document.getElementById("book");
    function add(){
            if(booktitle.value == ""){
              book.style.color = "red";
              book.innerHTML = "Field cannot be empty !!";
              booktitle.style.border = "2px solid red";
              return false;
            }

            else{
              book.style.color = "green";
              book.innerHTML = "Success";
              booktitle.style.border = "2px solid green";
              return true;
            }
    }


    let author = document.getElementById("author");
    let auth = document.getElementById("auth");
    function add2(){
      //  let regexp = /^([A-Za-z0-9\.-]+)@([A-Za-z0-9\-]+).([a-z]{3,4})(.[a-z]{3,4})?$/
      let regexp = /^([A-Za-z\.]+)?$/
              if(author.value ==""){
              auth.style.color = "red";
              auth.innerHTML = "field cannot be empty !!";
              author.style.border = "2px solid red";
              return false;
            }
     
           else if(regexp.test(author.value)){
              auth.style.color = "green";
              auth.innerHTML = "success";
              author.style.border = "2px solid green";
              return true;
            }

            else{
              auth.style.color = "red";
              auth.innerHTML = "Please Enter the Name only !!";
              author.style.border = "2px solid red";
              return false;
            }
    }


    let load = document.getElementById("load");
    let up = document.getElementById("up");
    function add3(){
          if(load.value == ""){
            up.style.color = "red";
            up.innerHTML = "Field cannot be empty !!";
            load.style.border = "2px solid red";
            return false;
          }
          else{
            up.style.color = "green";
            up.innerHTML = "success";
            load.style.border = "2px solid green";
            return true;
          }
    }

